{
    "name": "@raz1el/util",
    "version": "1.0.5",
    "description": "Personal collection of useful javascript functions",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "jest --detectOpenHandles --no-cache ./*",
        "start": "node --unhandled-rejections=strict dist/index.js",
        "build": "npm run clear && tsc -p tsconfig.prod.json",
        "build:dev": "npm run clear && tsc",
        "lint": "eslint -c .eslintrc.js --ext .js,.jsx,.ts,.tsx src",
        "lint:log": "eslint --no-color -o logs/lint.log -c .eslintrc.js --ext .js,.jsx,.ts,.tsx src",
        "clear": "rm -rf dist logs",
        "publish": "npm publish --access public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/raziEiL/ts-raz-util.git"
    },
    "keywords": [],
    "author": {
        "name": "Denis Medvedev (raziEiL)",
        "email": "mr.raz4291@gmail.com"
    },
    "license": "ISC",
    "homepage": "https://github.com/raziEiL/ts-raz-util#readme",
    "files": [
        "dist/**/*"
    ],
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^26.0.18",
        "@types/node": "^14.14.12",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/eslint-plugin-tslint": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "eslint": "^7.15.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-typescript": "^0.14.0",
        "eslint-plugin-unicorn": "^23.0.0",
        "jest": "^26.6.3",
        "ts-jest": "^26.4.4",
        "tslint": "^6.1.1",
        "typescript": "^4.1.2"
    }
}
